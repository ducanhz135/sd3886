@model List<eCommerce.ViewModels.Catalog.ProductRatings.ProductRatingViewModel>
@{
    ViewData["Title"] = "ShowComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script type="text/javascript" src="~/js/controller/homeClientController.js"></script>
    <style>
        .checked {
            color: orange;
        }
    </style>
@foreach(var item in Model)
{
    <partial name="_CommentPartial" model="item"/>
}

<h3> Feedback : </h3>

<form asp-controller="HomeClient" asp-action="AddComment" method="post" onsubmit="return VerifyRating()">
    <!-- Input and Submit elements -->
    <textarea rows="6" cols="50" name="productComment" id="txtProductComment"></textarea>
    <div onmouseout="CRateSelected()">
        <span id="span1" onmouseout="CRateOut(1)" onmouseover="CRateOver(1)" onclick="CRateClick(1)" class="fa fa-star"></span>
        <span id="span2" onmouseout="CRateOut(2)" onmouseover="CRateOver(2)" onclick="CRateClick(2)" class="fa fa-star"></span>
        <span id="span3" onmouseout="CRateOut(3)" onmouseover="CRateOver(3)" onclick="CRateClick(3)" class="fa fa-star"></span>
        <span id="span4" onmouseout="CRateOut(4)" onmouseover="CRateOver(4)" onclick="CRateClick(4)" class="fa fa-star"></span>
        <span id="span5" onmouseout="CRateOut(5)" onmouseover="CRateOver(5)" onclick="CRateClick(5)" class="fa fa-star"></span>
    </div>
    <div>
        <input type="hidden" name="rating" id="lblRating" value="0" />
    </div>
    <div>
        <input type="hidden" name="productId" id="lblProductId" value="@ViewBag.ProductId" />
    </div>
    <div>
        <input type="submit" class="btn btn-primary active" name="SaveComment" value="Save Comment" />
    </div>
</form>

