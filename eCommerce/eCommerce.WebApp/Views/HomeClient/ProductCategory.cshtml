@model List<eCommerce.ViewModels.Catalog.Products.PublicProductViewModel>
@{
    ViewData["Title"] = "ProductCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var path = "/_content/eCommerce.BackendApi/user-content/";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản phẩm mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in Model)
        {



            //var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href=""><img src="@(path+item.ImagePath)" alt="@item.Name" width="150" height="70" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price > 0 ? item.Price.ToString("N0")+" $" : "Liên hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id">Thêm vào giỏ</a></h4>
                    </div>
                    <div style="padding-top:22%; width:105%;">
                        <a asp-controller="HomeClient" asp-action="ShowComment" asp-route-id="@item.Id">
                            @await Component.InvokeAsync("Star", item.Id)

                        </a>
                    </div>
                </div>

            </div>
        }

    </div>
