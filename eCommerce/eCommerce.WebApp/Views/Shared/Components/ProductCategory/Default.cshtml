@model List<eCommerce.ViewModels.Catalog.Categories.CategoryViewModel>
<ul>
    <h3>Category</h3>
    @foreach (var item in Model.Where(x => x.ParentId == null))
    {
        var child = Model.Where(x => x.ParentId == item.Id);
        var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
        <li class="dropdown">
            <a href="/HomeClient/ProductCategory/@item.Id" @parentClass>@item.Name</a>
            @if (child.Count() > 0)
            {
                <ul class="dropdown-menu">
                    @foreach (var childItem in child)
                    {
                        <li><a href="/HomeClient/ProductCategory/@childItem.Id">@childItem.Name</a></li>
                    }

                </ul>
            }

        </li>
    }
</ul>