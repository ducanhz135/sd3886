@model eCommerce.ViewModels.Catalog.ProductRatings.ProductRatingViewModel

    
<table style="width:100%; border:1px solid black">
    <tr>
        <td>@Model.CommentedOn.ToString("dd-MM-yyyy")</td>
        
    </tr>
    <tr>
        <td>@Model.CommentDescription</td>
        
    </tr>
    <tr>
        <td>
            @for (int i = 0; i < Model.Rating; i++)
            {
                   <span class="fa fa-star checked"></span>
            }

            @for (int i = Model.Rating; i < 5; i++)
            {
                <span class="fa fa-star"></span>
            }
        </td>
        
    </tr>
</table>